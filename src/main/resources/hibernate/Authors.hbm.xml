<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="conference.model.entity.Authors" table="authors" schema="" catalog="publications">
        <id name="idAuthor">
            <column name="id_author" sql-type="int" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar" length="30" not-null="true"/>
        </property>
        <property name="lastName">
            <column name="last_name" sql-type="varchar" length="30" not-null="true"/>
        </property>
        <property name="institut">
            <column name="institut" sql-type="varchar" length="50"/>
        </property>
        <property name="university">
            <column name="university" sql-type="varchar" length="50"/>
        </property>
        <property name="city">
            <column name="city" sql-type="varchar" length="40"/>
        </property>
        <property name="state">
            <column name="state" sql-type="varchar" length="40"/>
        </property>
    </class>
</hibernate-mapping>